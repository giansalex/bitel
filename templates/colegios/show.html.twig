{% extends 'base.html.twig' %}

{% block title %}Colegios{% endblock %}

{% block body %}
    <h1>Colegio {{ colegio.id }}</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ colegio.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ colegio.name }}</td>
            </tr>
            <tr>
                <th>Code1</th>
                <td>{{ colegio.code1 }}</td>
            </tr>
            <tr>
                <th>Code2</th>
                <td>{{ colegio.code2 }}</td>
            </tr>
            <tr>
                <th>Code3</th>
                <td>{{ colegio.code3 }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ colegio.cantidad }}</td>
            </tr>
            <tr>
                <th>Cel</th>
                <td>{{ colegio.cel }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('colegios_index') }}" class="btn btn-primary">Regresar a la lista</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('colegios_edit', {'id': colegio.id}) }}" class="btn btn-info">edit</a>

    {{ include('colegios/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
